# outer(10)

def faktoriyel(sayi):
    if not isinstance(sayi,int):
        raise TypeError("sayi tam sayi olmal覺d覺r")
    if not sayi >=0:
        raise ValueError("numara 0 veya pozitif olmal覺d覺r")
    def inner_faktoriyel(sayi):
        if sayi<=1:
            return 1
        return sayi * inner_faktoriyel(sayi-1)
    return inner_faktoriyel(sayi)
sonuc=faktoriyel(6)
try:
   print(sonuc)
except Exception as ex:
    print(ex)